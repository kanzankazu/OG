<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.gandsoft.openguide">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />

    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the 'MyLocation' functionality. 
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".activity.SplashscreenActivity"
            android:theme="@style/AppTheme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activity.IntroActivity"
            android:theme="@style/AppTheme.FullScreen" />
        <activity
            android:name=".activity.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.AccountActivity"
            android:label="Account" />
        <activity
            android:name=".activity.ChangeEventActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.main.BaseHomeActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.infomenu.aMapActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.infomenu.bGalleryActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.infomenu.cInboxActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.infomenu.dComitteContactActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.infomenu.eEmergenciesActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.infomenu.fPracticalInfoActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.infomenu.gSurroundingAreaActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".activity.infomenu.hFeedbackActivity"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps" />
    </application>

</manifest>