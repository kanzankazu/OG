<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:animateLayoutChanges="true"
            android:orientation="vertical"
            android:padding="10dp">

            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:id="@+id/tvPracticalInfoChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Child"
                android:textColor="@color/colorPrimary"
                android:textIsSelectable="true"
                android:textSize="14dp" />

            <android.support.v7.widget.CardView
                android:id="@+id/cvspPracticalInfoChild"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp"
                app:cardBackgroundColor="@color/colorAccent"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp">

                <Spinner
                    android:id="@+id/spPracticalInfoChild"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/colorPrimary" />
            </android.support.v7.widget.CardView>


            <ImageView
                android:id="@+id/ivPracticalInfoChild"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:src="@drawable/template_account_og"
                android:visibility="visible" />

            <org.sufficientlysecure.htmltextview.HtmlTextView
                android:id="@+id/tvDetailPracticalInfoChild"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="jkhdfjshdfkjahdfkjashdfjksahdkfjhasdkjfahskdjfhsakdjfhsakjdfhasjdfhaskjdfhajskdhfksajdhfkjashdfkjashdfkjashdfkashdfkjahs"
                android:textColor="@color/colorPrimary"
                android:textSize="14dp"
                android:visibility="visible" />
        </LinearLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>


