<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_radius"
    android:backgroundTint="@color/white"
    android:gravity="center|top"
    android:orientation="vertical">

    <View
        android:layout_width="60dp"
        android:layout_height="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/background_radius"
        android:backgroundTint="@color/gray_very_light" />

    <TextView
        android:id="@+id/tvWalletIdCardHtml"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="17-19 Jan 2018"
        android:textColor="@color/gray_very_light"
        android:textSize="10dp"
        android:visibility="gone" />

    <WebView
        android:id="@+id/wvWalletIdCardHtml"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        tools:ignore="WebViewLayout" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="25dp"
        android:background="@color/gray_very_light" />

    <android.support.v7.widget.CardView
        android:id="@+id/cvWalletIDcardDetail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:backgroundTint="@color/colorPrimary"
        android:visibility="gone"
        app:cardCornerRadius="7dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="7dp"
            android:text="DETAIL"
            android:textColor="@color/white" />
    </android.support.v7.widget.CardView>

</LinearLayout>