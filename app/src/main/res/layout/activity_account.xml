<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:orientation="vertical">

    <!--App Bar-->
    <RelativeLayout
        android:id="@+id/rlAccountTop"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:animateLayoutChanges="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Account"
            android:textColor="@color/colorPrimary"
            android:textSize="20dp" />

        <ImageButton
            android:id="@+id/ibAccClose"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:background="?android:selectableItemBackground"
            android:src="@drawable/ic_close_primary"
            android:visibility="visible" />
    </RelativeLayout>

    <!--Medium Space-->
    <View
        android:id="@+id/focus_thief"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <!--Content Scrollable-->
    <ScrollView
        android:id="@+id/sc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rlAccountTop"
        android:background="@color/gray_very_light">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animateLayoutChanges="true"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:animateLayoutChanges="true"
                android:orientation="vertical"
                android:padding="10dp">

                <!--Account ID-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/background_radius_top"
                    android:backgroundTint="@color/colorAccent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="account id"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <TextView
                        android:id="@+id/tvAccID"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="id"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />
                </LinearLayout>

                <!--Select Picture-->
                <LinearLayout
                    android:id="@+id/llAccPic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/background_middle"
                    android:backgroundTint="@color/white"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PICTURE PROFILE"
                        android:textColor="@color/colorAccent" />

                    <ImageView
                        android:id="@+id/ivWrapPic"
                        android:layout_width="match_parent"
                        android:layout_height="500dp"
                        android:visibility="gone"
                        android:scaleType="centerCrop"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/ibAccCamera"
                            android:layout_width="14dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_profile_camera_small"
                            android:clickable="true"/>

                        <TextView
                            android:id="@+id/tvAccSelPic"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Select Picture"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:selectAllOnFocus="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12dp" />

                    </LinearLayout>

                </LinearLayout>

                <!--Borderspace-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_very_light" />

                <!--Name-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/background_middle"
                    android:backgroundTint="@color/white"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Full Name"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent" />

                    <EditText
                        android:id="@+id/etAccName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/transparent"
                        android:hint="Full Name"
                        android:inputType="text"
                        android:maxLength="30"
                        android:paddingTop="5dp"
                        android:selectAllOnFocus="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12dp" />


                </LinearLayout>

                <!--Borderspace-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_very_light" />

                <!--Email-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/background_middle"
                    android:backgroundTint="@color/white"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Email Address"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent" />

                    <EditText
                        android:id="@+id/etAccEmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/transparent"
                        android:hint="Email Address"
                        android:inputType="textEmailAddress"
                        android:maxLength="30"
                        android:paddingTop="5dp"
                        android:selectAllOnFocus="true"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12dp" />


                </LinearLayout>

                <!--Borderspace-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_very_light" />

                <!--Gender Dropdown-->
                <LinearLayout
                    android:id="@+id/llAccGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/background_middle"
                    android:backgroundTint="@color/white"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Gender"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent" />

                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/spinGender"
                        android:paddingTop="5dp"
                        android:layout_marginTop="5dp"
                        android:background="@android:color/transparent"
                        android:textColor="@color/colorPrimary"
                        android:textSize="12dp">
                    </Spinner>

                </LinearLayout>

                <!--Borderspace-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_very_light" />

                <!--Birthdate-->
                <LinearLayout
                    android:id="@+id/llAccBirthdate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/background_middle"
                    android:backgroundTint="@color/white"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Birthdate"
                        android:textAllCaps="true"
                        android:textColor="@color/colorAccent" />



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:animateLayoutChanges="true"
                        android:gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/ibAccCalendar"
                            android:layout_width="14dp"
                            android:layout_height="match_parent"
                            android:scaleType="centerInside"
                            android:src="@drawable/ic_profile_calendar_small"
                            android:clickable="true"/>

                        <TextView
                            android:id="@+id/tvAccTgl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DD"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:selectAllOnFocus="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12dp" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="2dp"
                            android:background="@color/colorPrimaryDark" />

                        <TextView
                            android:id="@+id/tvAccBulan"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="MM"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:selectAllOnFocus="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12dp" />

                        <View
                            android:layout_width="2dp"
                            android:layout_height="2dp"
                            android:background="@color/colorPrimaryDark" />

                        <TextView
                            android:id="@+id/tvAccTahun"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="YYYY"
                            android:layout_marginStart="10dp"
                            android:layout_marginEnd="10dp"
                            android:selectAllOnFocus="true"
                            android:textColor="@color/colorPrimary"
                            android:textSize="12dp" />

                    </LinearLayout>


                </LinearLayout>

                <!--Borderspace-->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray_very_light" />

                <!--Privacy Police-->
                <LinearLayout
                    android:id="@+id/llAccAggrement"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/background_middle"
                    android:backgroundTint="@color/white"
                    android:gravity="start"
                    android:orientation="vertical"
                    android:padding="15dp">

                    <android.support.v7.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="1dp"
                        app:cardCornerRadius="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:animateLayoutChanges="true"
                            android:gravity="center"
                            android:orientation="horizontal">

                            <CheckBox
                                android:id="@+id/cbAccAggrement"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tvAccAggrement"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="kanzankazu"
                                android:textColor="@color/colorPrimary" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>


                </LinearLayout>

                <!--Save Button-->
                <LinearLayout
                    android:id="@+id/llAccSave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:background="@drawable/background_radius_bottom"
                    android:backgroundTint="@color/colorPrimaryDark"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingBottom="15dp"
                    android:paddingTop="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="save"
                        android:textAllCaps="true"
                        android:textColor="@color/white" />

                </LinearLayout>
            </LinearLayout>

            <!--Sign Out Text-->
            <TextView
                android:id="@+id/tvSignOutSkip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="SIGN-OUT"
                android:textColor="@color/super_red" />

        </LinearLayout>

    </ScrollView>

    <!--Medium Space-->
    <View
        android:id="@+id/bottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black" />


</RelativeLayout>